#!/usr/bin/make -f
# -*- makefile -*-

# This has to be exported to make some magic below work.
export DH_OPTIONS

%:
	dh $@

# Do not run any tests after the build
override_dh_auto_test:

# Implement staged installation
DESTDIR = debian/erlang-ranch
VERSION = 1.0.0
ERL_APP_DESTDIR = $(DESTDIR)/usr/lib/erlang/lib/ranch-$(VERSION)/ebin
override_dh_install:
	install -m 755 -d $(ERL_APP_DESTDIR)
	install -m 640 ebin/*.app ebin/*.beam $(ERL_APP_DESTDIR)
